<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bike155ProyectMAUI.CrearRutaPage"
             BackgroundColor="#CFC1E8"
             Padding="20">

    <VerticalStackLayout Spacing="15">

        <!-- Título -->
        <Label Text="Nueva Ruta"
               FontSize="24"
               HorizontalOptions="Center"
               TextColor="White"
               BackgroundColor="#7774E8"
               Padding="10"/>

        <!-- Etiqueta y campo Ubicación -->
        <Label Text="Ubicación de la ruta:"
               FontSize="16"
               TextColor="Black"/>
        <Entry x:Name="UbicacionEntry" Placeholder="Ejemplo: Parque Central"/>

        <!-- Etiqueta y campo Fecha -->
        <Label Text="Fecha de la ruta:"
               FontSize="16"
               TextColor="Black"/>
        <DatePicker x:Name="FechaPicker"/>

        <!-- Etiqueta y campo UserId -->
        <Label Text="ID del usuario:"
               FontSize="16"
               TextColor="Black"/>
        <Entry x:Name="UserIdEntry" Placeholder="Ejemplo: 1" Keyboard="Numeric"/>

        <!-- Etiqueta y campo BikeId -->
        <Label Text="ID de la bicicleta:"
               FontSize="16"
               TextColor="Black"/>
        <Entry x:Name="BikeIdEntry" Placeholder="Ejemplo: 1" Keyboard="Numeric"/>

        <!-- Botón para guardar -->
        <Button Text="Guardar"
                BackgroundColor="#9D74E8"
                TextColor="White"
                CornerRadius="10"
                Clicked="OnGuardarClicked"/>
    </VerticalStackLayout>
</ContentPage>
